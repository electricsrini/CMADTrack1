<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.cmad.blog.dao.Users" table="USERS" schema="CMADBlog" >
		<meta attribute="class-description">
			This class contains User description
		</meta>
		<id name="userId" type="int">
			<column name="USERID" />
			<generator class="native" />
		</id>
		<property name="firstName" type="string">
			<column name="FNAME" length="100" />
		</property>
		<property name="lastName" type="string">
			<column name="LNAME" length="100" />
		</property>
		<property name="emailId" type="string">
			<column name="EMAIL_ID" length="100" />
		</property>
		<property name="password" type="string">
			<column name="PASSWORD" length="100" />
		</property>
		<property name="joinDate" type="timestamp">
			<column name="JOIN_DATE" length="29" />
		</property>
		<property name="age" type="int">
			<column name="AGE" />
		</property>
		<property name="country" type="string">
			<column name="COUNTRY" length="25" />
		</property>
		<property name="state" type="string">
			<column name="STATE" length="25" />
		</property>
		<property name="city" type="string">
			<column name="CITY" length="25" />
		</property>
	</class>
	
	<class name="com.cmad.blog.dao.Blogs" table="BLOGS" schema="CMADBlog" >
		<meta attribute="class-description">
			This class contains Blog description
		</meta>
		<id name="blogId" type="int">
			<column name="BLOGID" />
			<generator class="native" />
		</id>
		
		<property name="title" type="string">
			<column name="TITLE" length="200" />
		</property>
		
		<property name="content" type="string">
			<column name="CONTENT" length="2000" />
		</property>
		
		<property name="entryDate" type="timestamp">
			<column name="ENTRY_DATE" length="29" />
		</property>
		
		<property name="userId" type="int">
			<column name="USERID" />
		</property>
		
		<!--  <many-to-one name="userId" class="com.cmad.blog.dao.Users"
			column="USERID" not-null="true"  /> -->
		
		<property name="rank" type="int">
			<column name="RANK" />
		</property>
	</class>
	
	<class name="com.cmad.blog.dao.Comments" table="COMMENTS" schema="CMADBlog" >
		
		<meta attribute="class-description">
			This class contains Comments description
		</meta>
		
		<id name="commentId" type="int">
			<column name="COMMENTID" />
			<generator class="native" />
		</id>
		
		<property name="blogId" type="int">
			<column name="BLOGID" />
		</property>
		
		<!--  <many-to-one name="blogId" class="com.cmad.blog.dao.Blogs"
			column="BLOGID" not-null="true" /> -->
		
		<property name="userId" type="int">
			<column name="USERID" />
		</property>
		
		<!-- <many-to-one name="userId" class="com.cmad.blog.dao.Users"
			column="USERID" not-null="true" />  -->
		
		<property name="entryDate" type="timestamp">
			<column name="ENTRY_DATE" length="29" />
		</property>
		<property name="content" type="string">
			<column name="CONTENT" length="2000" />
		</property>
		<property name="parentId" type="int">
			<column name="PARENTID" />
		</property>
		<property name="rank" type="int">
			<column name="RANK" />
		</property>
	</class>
	
	<class name="com.cmad.blog.dao.SearchStrings" table="SEARCHSTRINGS" schema="CMADBlog" >
		
		<meta attribute="class-description">
			This class contains Search String description
		</meta>
		
		<id name="keyId" type="int">
			<column name="KEYID" />
			<generator class="native" />
		</id>
		
		<property name="searchKey" type="string">
			<column name="SEARCHKEY" length="200" />
		</property>		
		
	</class>
	
	<class name="com.cmad.blog.dao.KeywordSearch" table="KEYWORDSEARCH" schema="CMADBlog" >
		
		<meta attribute="class-description">
			This class contains Keystring and Blog Id description
		</meta>
		
		<id name="Id" type="int">
			<column name="ID" />
			<generator class="native" />
		</id>
		
		<!-- <many-to-one name="keyId" class="com.cmad.blog.dao.SearchStrings"
			column="KEYID" not-null="true" />  -->
		
		<property name="keyId" type="int">
			<column name="BLOGID" />
		</property>
		
		<!-- <many-to-one name="blogId" class="com.cmad.blog.dao.Blogs"
			column="BLOGID" not-null="true" />  -->
		
		<property name="blogId" type="int">
			<column name="BLOGID" />
		</property>
		
	</class>
	
</hibernate-mapping>
